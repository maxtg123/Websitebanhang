@model IEnumerable<Shop.Models.Brand>

@{
    ViewData["Title"] = "Thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create"role="button" class="btn btn-success btn-rounded waves-effect waves-light"><i class="fas fa-plus pr-2" ></i>Thêm</a>                                    
</p>

<div class="row">
    <div class="col-12">
        <!-- /.card -->

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h2 class="card-title"><b>Danh sách thương hiệu</b></h2>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1"class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th></th>                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @(item.Status?"Hoạt động": "Không hoạt động")
                                </td>
                                <td style="width: 200px;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" role="button" class="btn btn-info btn-rounded waves-effect waves-light mr-2"><i class="fas fa-pen pr-2" ></i>Sửa</a>                                    
                                    <a asp-action="Delete" asp-route-id="@item.Id" role="button" class="btn btn-danger btn-rounded waves-effect waves-light"><i class="fas fa-trash pr-2" ></i>Xoá</a>                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>




@section Script {
<script>
    $(function () {
      $("#example1").DataTable({
        "responsive": true, "lengthChange": false, "autoWidth": false//,
        //"buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
      }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
    });
</script>
}