@*//Danh sách sản phẩm bán chạy*@
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h2 class="card-title"><b>@ViewBag.TitleProductNotifi</b></h2>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Hình ảnh
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                Tổng số lượng bán được
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.proBestSeller)
                        {
                            <tr>
                                <td style="width: 130px;">
                                    <a asp-action="ProductSellerDetail" asp-route-id="@item.Id"><img style="width: 100px;" src="~/admin/assets/images/products/@item.ProductImage" alt="image" /></a>
                                </td>
                                <td>
                                    <a asp-action="ProductSellerDetail" asp-route-id="@item.Id">@item.ProductName</a> 
                                </td>
                                <td>
                                    @item.TotalQuantity
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>

    </div>
</div>


@*Danh sách khách hàng mua nhiều tiền nhất*@
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h2 class="card-title"><b>@ViewBag.TitleUserRick</b></h2>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 100px;">
                                Hình ảnh
                            </th>
                            <th>
                                Tên khách hàng
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Tổng tiền đã mua
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.UserRick)
                        {
                        <tr>
                            <td style="width: 60px;">
                                <a asp-action="UserRickDetail" asp-route-id="@item.Id"><img style="width: 50px;" src="~/admin/assets/images/Account/@item.UserImage" alt="image" /></a>
                            </td>
                            <td>
                                <a asp-action="UserRickDetail" asp-route-id="@item.Id">@item.FullName</a> 
                            </td>
                            <td>
                                @item.Phone
                            </td>
                            <td>
                                @item.TotalDisplay
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>

    </div>
</div>

