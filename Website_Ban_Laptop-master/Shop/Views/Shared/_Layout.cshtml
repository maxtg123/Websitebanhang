
<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/shop/norda/assets/images/logo/logonew.png">

    <!-- All CSS is here
    ============================================ -->
    <link rel="stylesheet" href="~/shop/norda/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/vendor/signericafat.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/vendor/cerebrisans.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/vendor/simple-line-icons.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/vendor/elegant.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/vendor/linear-icon.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/plugins/nice-select.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/plugins/easyzoom.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/plugins/slick.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/plugins/animate.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/plugins/magnific-popup.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/plugins/jquery-ui.css">
    <link rel="stylesheet" href="~/shop/norda/assets/css/style.css">
    @RenderSection("CSS", required: false)

</head>

<body>

    <div class="main-wrapper">
        <header class="header-area">
            <div class="header-large-device">
                <div class="header-middle header-middle-padding-2" style="padding-bottom: 0px;">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-xl-2 col-lg-2">
                                <div class="logo">
                                    <a asp-controller="Home" asp-action="Index"><img style="width: 100px;" src="~/shop/norda/assets/images/logo/logonew.png" alt="logo"></a>
                                </div>
                            </div>
                            <div class="col-xl-7 col-lg-7">
                                <div class="categori-search-wrap categori-search-wrap-modify-3">

                                    @*<div class="categori-style-1">
                                        <select class="nice-select nice-select-style-1">
                                            <option value="All">Tất cả</option>
                                            @if (ViewBag.lstBrands != null)
                                            {
                                                foreach (var brand in ViewBag.lstBrands)
                                                {
                                                    <option value="@brand.Id">@brand.Name </option>
                                                }
                                            }
                                        </select>
                                    </div>*@
                                    <div class="search-wrap-3">
                                        <form asp-controller="Products" asp-action="Product_Filter">
                                            <input name="searchString" placeholder="Tìm kiếm..." type="text">
                                            <button type="submit" class="blue"><i class="lnr lnr-magnifier"></i></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-lg-3">
                                <div class="hotline-2-wrap">
                                    <div class="hotline-2-icon">
                                        <i class="blue icon-call-end"></i>
                                    </div>
                                    <div class="hotline-2-content">
                                        <span> Hotline 24/7</span>
                                        <h5>028 38 212 868 </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-bottom bg-blue">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-3">
                                <div class="main-categori-wrap main-categori-wrap-modify-2">
                                    <a class="categori-show categori-blue" href="#">Danh mục sản phẩm <i class="icon-arrow-down icon-right"></i></a>
                                    <div class="category-menu-2 category-menu-2-blue categori-hide categori-not-visible-2">
                                        <nav>
                                            <ul>
                                                @if (ViewBag.lstBrands != null)
                                                {
                                                    foreach (var brand in ViewBag.lstBrands)
                                                    {
                                                        <li><a asp-controller="Products" asp-action="Index" asp-route-id="@brand.Id"><i class="icon-screen-desktop"></i> @brand.Name</a></li>
                                                    }
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="main-menu main-menu-white main-menu-padding-1 main-menu-font-size-14 main-menu-lh-5">
                                    <nav>
                                        <ul>
                                            <li><a asp-controller="Home" asp-action="Index">Trang chủ </a></li>
                                            <li><a asp-controller="Products" asp-action="Index">Sản phẩm </a></li>
                                            @*<li><a href="#">Về chúng tôi </a></li>*@
                                            <li><a asp-controller="Settings" asp-action="Index">Liên hệ </a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            @*Giỏ hàng*@
                            <div class="col-lg-3">
                                <div class="header-action header-action-flex pr-20">
                                    <div class="same-style-2 same-style-2-white same-style-2-font-dec">
                                        @if (ViewBag.UserLogin != null)
                                        {
                                            var user = ViewBag.UserLogin;
                                            <a asp-controller="Accounts" asp-action="Index" asp-route-id="@user.Id"><img style="border-radius: 50%; width: 23px; float: right;" src="~/admin/assets/images/Account/@user.Avatar" /></a>

                                        }
                                        else
                                        {
                                            <a asp-controller="Login" asp-action="Index"><i class="icon-user"></i></a>
                                        }
                                    </div>
                                    @*<div class="same-style-2 same-style-2-white same-style-2-font-dec">
                                        <a href="wishlist.html"><i class="icon-heart"></i><span class="pro-count red">03</span></a>
                                    </div>*@
                                    <div class="same-style-2 same-style-2-white same-style-2-font-dec header-cart">
                                        <a asp-controller="Carts" asp-action="Index">
                                            <i class="icon-basket-loaded"></i><span class="pro-count red">
                                                @(ViewBag.TotalCart != null?ViewBag.TotalCart:0)
                                            </span>
                                            @*<span class="cart-amount white">$2,435.30</span>*@
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-small-device small-device-ptb-1">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-5">
                            <div class="mobile-logo">
                                <a href="index.html">
                                    <img alt="" src="~/shop/norda/assets/images/logo/logonew.png">
                                </a>
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="header-action header-action-flex">
                                <div class="same-style-2 same-style-2-font-inc">
                                    <a href="login-register.html"><i class="icon-user"></i></a>
                                </div>
                                <div class="same-style-2 same-style-2-font-inc">
                                    <a href="wishlist.html"><i class="icon-heart"></i><span class="pro-count red">03</span></a>
                                </div>
                                <div class="same-style-2 same-style-2-font-inc header-cart">
                                    <a class="cart-active" href="#">
                                        <i class="icon-basket-loaded"></i><span class="pro-count red">02</span>
                                    </a>
                                </div>
                                <div class="same-style-2 main-menu-icon">
                                    <a class="mobile-header-button-active" href="#"><i class="icon-menu"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>


        @RenderBody()
        <footer class="footer-area bg-gray pb-30 pt-20">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="contact-info-wrap">
                            <div class="footer-logo">
                                <a asp-controller="Home" asp-action="Index"><img style="width: 100px;" src="~/shop/norda/assets/images/logo/logonew.png" alt="logo"></a>
                            </div>
                            <div class="single-contact-info">
                                <span>Địa chỉ
                                </span>
                                <p>65 Huỳnh Thúc Kháng, P.Bến Nghé, Q.1, Tp.HCM.</p>
                            </div>
                            <div class="single-contact-info">
                                <span>Điện thoại</span> 
                                <p>028 38 212 868</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="footer-right-wrap">
                            <div class="footer-menu">
                                <nav>
                                    <ul>
                                        <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                                        <li><a asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                                        @*<li><a href="shop.html">Product </a></li>
                                        <li><a href="contact.html">Contact</a></li>
                                        <li><a href="blog.html">Blog.</a></li>*@
                                    </ul>
                                </nav>
                            </div>
                            @*<div class="social-style-2 social-style-2-mrg">
                                <a href="#"><i class="social_twitter"></i></a>
                                <a href="#"><i class="social_facebook"></i></a>
                                <a href="#"><i class="social_googleplus"></i></a>
                                <a href="#"><i class="social_instagram"></i></a>
                                <a href="#"><i class="social_youtube"></i></a>
                            </div>
                            <div class="copyright">
                                <p>Copyright © 2020 HasThemes | <a href="https://hasthemes.com/">Built with <span>Norda</span> by HasThemes</a>.</p>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <!-- All JS is here
    ============================================ -->
    <script src="~/shop/norda/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/shop/norda/assets/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="~/shop/norda/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/shop/norda/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/shop/norda/assets/js/plugins/slick.js"></script>
    <script src="~/shop/norda/assets/js/plugins/jquery.syotimer.min.js"></script>
    <script src="~/shop/norda/assets/js/plugins/jquery.instagramfeed.min.js"></script>
    <script src="~/shop/norda/assets/js/plugins/jquery.nice-select.min.js"></script>
    <script src="~/shop/norda/assets/js/plugins/wow.js"></script>
    <script src="~/shop/norda/assets/js/plugins/jquery-ui-touch-punch.js"></script>
    <script src="~/shop/norda/assets/js/plugins/jquery-ui.js"></script>
    <script src="~/shop/norda/assets/js/plugins/magnific-popup.js"></script>
    <script src="~/shop/norda/assets/js/plugins/sticky-sidebar.js"></script>
    <script src="~/shop/norda/assets/js/plugins/easyzoom.js"></script>
    <script src="~/shop/norda/assets/js/plugins/scrollup.js"></script>
    <script src="~/shop/norda/assets/js/plugins/ajax-mail.js"></script>

    <!-- Use the minified version files listed below for better performance and remove the files listed above
    <script src="~/shop/norda/assets/js/vendor/vendor.min.js"></script>
    <script src="~/shop/norda/assets/js/plugins/plugins.min.js"></script>  -->
    <!-- Main JS -->
    <script src="~/shop/norda/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Script", required: false);

</body>

</html>