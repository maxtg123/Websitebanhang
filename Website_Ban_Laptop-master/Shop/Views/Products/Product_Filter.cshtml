@model IEnumerable<Shop.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Mobile menu start -->
<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="breadcrumb-content text-center">
            @*<img src="https://cdn-vn.pushdy.com/_uploads/phongvu_live_teko/8eef6ed1f0b34d1bac8bef7c2d4cf238.png" style="border-radius:15px;">*@
            <h2>@ViewBag.TitleFilter</h2>
        </div>
    </div>
</div>
<div class="shop-area pt-120 pb-120">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-12">
                <div class="shop-bottom-area">
                    <div class="tab-content jump">
                        <div id="shop-1" class="tab-pane active">
                            <div class="row">
                                @if (Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                                            <div class="single-product-wrap mb-35">
                                                <div class="product-img product-img-zoom mb-15">
                                                    <a asp-controller="Products" asp-action="Product_Detail" asp-route-id="@item.Id">
                                                        <img src="~/admin/assets/images/products/@item.Image" alt="">
                                                    </a>
                                                    <div class="product-action-2 tooltip-style-2">
                                                        @*<button title="Wishlist"><i class="icon-heart"></i></button>
                                                <button title="Quick View" data-toggle="modal" data-target="#exampleModal"><i class="icon-size-fullscreen icons"></i></button>
                                                <button title="Compare"><i class="icon-refresh"></i></button>*@
                                                    </div>
                                                </div>
                                                <div class="product-content-wrap-2 text-center">
                                                    <div class="product-content-categories">
                                                        <a class="blue">@item.Brand.Name</a>
                                                    </div>
                                                    @*<div class="product-rating-wrap">
                                                        <div class="product-rating">
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star gray"></i>
                                                        </div>
                                                        <span>(2)</span>
                                                    </div>*@
                                                    <h3><a class="blue" asp-controller="Products" asp-action="Product_Detail" asp-route-id="@item.Id">@item.Name</a></h3>
                                                    <div class="product-price-2">
                                                        <span class="new-price">@item.PriceDisplay ₫ </span>
                                                    </div>
                                                </div>
                                                <div class="product-content-wrap-2 product-content-position text-center">
                                                    @*<div class="product-rating-wrap">
                                                        <div class="product-rating">
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star"></i>
                                                            <i class="icon_star gray"></i>
                                                        </div>
                                                        <span>(2)</span>
                                                    </div>*@
                                                    <div class="product-content-categories">
                                                        @*<a class="blue" asp-controller="Brands" asp-action="Details" asp-route-id="@item.BrandId">@item.Brand.Name</a>*@
                                                        <a>@item.Brand.Name</a>
                                                    </div>
                                                    <h3><a asp-controller="Products" asp-action="Product_Detail" asp-route-id="@item.Id">@item.Name</a></h3>
                                                    <div class="product-price-2">
                                                        <span>@item.PriceDisplay ₫ </span>
                                                    </div>
                                                    <div class="pro-add-to-cart">
                                                        <form method="post" asp-controller="Carts" asp-action="Create">
                                                            <input type="text" hidden name="productId" value="@item.Id" />
                                                            <input type="number" hidden name="quantity" value="1" />

                                                            <button type="submit" title="Thêm vào giỏ hàng">Thêm vào giỏ hàng</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                }
                            </div>
                        </div>
                    </div>
                    @*@if (Model.Count() > 0)
                    {
                        <div class="pro-pagination-style text-center mt-10">
                            <ul>
                                <li><a class="prev" href="#"><i class="icon-arrow-left"></i></a></li>
                                <li><a class="active" href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a class="next" href="#"><i class="icon-arrow-right"></i></a></li>
                            </ul>
                        </div>
                    }*@
                </div>
            </div>
        </div>
    </div>
</div>

